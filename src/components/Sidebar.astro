---
// Sidebar navigation component
const currentPath = Astro.url.pathname;

const navItems = [
  { href: '/', label: 'Home', icon: 'home' },
  { href: '/experience', label: 'Experience', icon: 'briefcase' },
  { href: '/projects', label: 'Projects', icon: 'folder' },
  { href: '/research', label: 'Research', icon: 'book' },
];

function isActive(href: string, current: string): boolean {
  if (href === '/') return current === '/';
  return current.startsWith(href);
}
---

<div class="flex flex-col h-full p-8 overflow-y-auto">
  <!-- Logo / Name -->
  <div class="mb-10">
    <a href="/" class="block group">
      <h1 class="text-2xl font-bold text-gray-900 group-hover:text-blue-600 transition-colors">
        Your Name
      </h1>
      <p class="text-sm text-gray-500 mt-1">Developer & Researcher</p>
    </a>
  </div>

  <!-- Bio -->
  <div class="mb-10 pb-8 border-b border-gray-200">
    <p class="text-sm text-gray-600 leading-relaxed">
      Software developer passionate about building elegant solutions to complex problems.
    </p>
  </div>

  <!-- Navigation with enhanced active states -->
  <nav class="flex-1" aria-label="Main navigation">
    <ul class="space-y-1.5">
      {navItems.map(item => (
        <li>
          <a
            href={item.href}
            class={`
              group relative flex items-center gap-3 px-4 py-2.5 rounded-lg text-sm font-medium transition-all
              ${isActive(item.href, currentPath)
                ? 'text-blue-700 bg-blue-50 font-semibold'
                : 'text-gray-700 hover:bg-gray-50 hover:text-gray-900'
              }
            `}
            aria-current={isActive(item.href, currentPath) ? 'page' : undefined}
          >
            <!-- Active indicator dot -->
            {isActive(item.href, currentPath) && (
              <span class="absolute left-0 top-1/2 -translate-y-1/2 w-1 h-8 bg-blue-600 rounded-r-full"></span>
            )}

            <span class="relative">{item.label}</span>

            <!-- Subtle arrow indicator on active -->
            {isActive(item.href, currentPath) && (
              <svg class="ml-auto w-4 h-4 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
              </svg>
            )}
          </a>
        </li>
      ))}
    </ul>
  </nav>

  <!-- Footer / Social Links -->
  <div class="mt-auto pt-8 border-t border-gray-200">
    <p class="text-xs uppercase tracking-wider text-gray-500 font-semibold mb-4">Connect</p>
    <div class="flex gap-4 text-gray-400">
      <a
        href="https://github.com/username"
        class="hover:text-gray-900 transition-colors"
        aria-label="GitHub"
        title="GitHub"
      >
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/></svg>
      </a>
      <a
        href="https://twitter.com/username"
        class="hover:text-gray-900 transition-colors"
        aria-label="Twitter"
        title="Twitter"
      >
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M23 3a10.9 10.9 0 01-3.14 1.53 4.48 4.48 0 00-7.86 3v1A10.66 10.66 0 013 4s-4 9 5 13a11.64 11.64 0 01-7 2c9 5 20 0 20-11.5a4.5 4.5 0 00-.08-.83A7.72 7.72 0 0023 3z"/></svg>
      </a>
      <a
        href="mailto:you@example.com"
        class="hover:text-gray-900 transition-colors"
        aria-label="Email"
        title="Email"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/></svg>
      </a>
    </div>
  </div>
</div>

<style>
  /* Custom scrollbar */
  ::-webkit-scrollbar {
    width: 6px;
  }

  ::-webkit-scrollbar-track {
    background: transparent;
  }

  ::-webkit-scrollbar-thumb {
    background: #d1d5db;
    border-radius: 3px;
  }

  ::-webkit-scrollbar-thumb:hover {
    background: #9ca3af;
  }
</style>
