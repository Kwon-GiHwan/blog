---
import type { CollectionEntry } from 'astro:content';
import { formatDate } from '@utils/index';

interface Props {
  project: CollectionEntry<'projects'>;
}

const { project } = Astro.props;
const { title, description, date, tags } = project.data;
---

<article class="group border border-dark-border rounded-lg p-6 hover:border-blue-400 transition-all hover:shadow-lg hover:shadow-blue-400/10">
  <a href={`/projects/${project.slug}`} class="block">
    <h2 class="text-2xl font-bold text-white mb-2 group-hover:text-blue-400 transition-colors">
      {title}
    </h2>
    <time class="text-sm text-dark-muted" datetime={date.toISOString()}>
      {formatDate(date)}
    </time>
    <p class="mt-3 text-dark-text leading-relaxed">
      {description}
    </p>
    <div class="flex flex-wrap gap-2 mt-4">
      {tags.map(tag => (
        <span class="px-2 py-1 bg-dark-surface text-xs rounded">
          #{tag}
        </span>
      ))}
    </div>
  </a>
</article>
