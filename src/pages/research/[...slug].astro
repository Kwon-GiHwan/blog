---
import { getCollection } from 'astro:content';
import ContentLayout from '@layouts/ContentLayout.astro';
import { filterDrafts } from '@utils/index';

export async function getStaticPaths() {
  const allResearch = await getCollection('research');
  const publishedResearch = filterDrafts(allResearch);

  return publishedResearch.map(research => ({
    params: { slug: research.slug },
    props: { research },
  }));
}

const { research } = Astro.props;
const { Content } = await research.render();
const { title, description, date, tags, githubUrl, demoUrl } = research.data;

// Get raw content for reading time and TOC
const rawContent = research.body;
---

<ContentLayout
  title={title}
  description={description}
  date={date}
  tags={tags}
  content={rawContent}
  githubUrl={githubUrl}
  demoUrl={demoUrl}
>
  <Content />
</ContentLayout>
