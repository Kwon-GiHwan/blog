---
import SidebarLayout from './SidebarLayout.astro';
import TableOfContents from '@components/TableOfContents.astro';
import GiscusComments from '@components/GiscusComments.astro';
import { formatDate, getReadingTime } from '@utils/index';
import { generateToc } from '@utils/toc';

interface Props {
  title: string;
  description: string;
  date: Date;
  tags: string[];
  content: string;
  githubUrl?: string;
  demoUrl?: string;
}

const { title, description, date, tags, content, githubUrl, demoUrl } = Astro.props;
const readingTime = getReadingTime(content);
const toc = generateToc(content);
---

<SidebarLayout title={title} description={description} maxWidth="article">
  <article class="w-full">
    <!-- Article Header with generous spacing -->
    <header class="mb-12 pb-8 border-b border-gray-200">
      <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6 leading-tight tracking-tight">
        {title}
      </h1>

      <!-- Date, Reading Time, and Project Links -->
      <div class="flex flex-wrap items-center gap-3 text-sm text-gray-600 mb-6">
        <time datetime={date.toISOString()} class="font-medium">
          {formatDate(date)}
        </time>
        <span class="text-gray-300">•</span>
        <span>{readingTime}</span>

        {(githubUrl || demoUrl) && (
          <>
            <span class="text-gray-300">•</span>
            <div class="flex items-center gap-3">
              {githubUrl && (
              <a
                href={githubUrl}
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center gap-1.5 text-gray-600 hover:text-gray-900 transition-all hover:scale-110"
                aria-label="View source code on GitHub"
                title="View on GitHub"
              >
                <!-- GitHub Logo SVG -->
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                </svg>
                <span class="text-xs font-medium hidden sm:inline">Code</span>
              </a>
              )}

              {demoUrl && (
                <a
                  href={demoUrl}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="inline-flex items-center gap-1.5 text-blue-600 hover:text-blue-700 transition-all hover:scale-110"
                  aria-label="View live demo"
                  title="View live demo"
                >
                  <!-- External Link Icon SVG -->
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
                  </svg>
                  <span class="text-xs font-medium hidden sm:inline">Demo</span>
                </a>
              )}
            </div>
          </>
        )}
      </div>

      <!-- Tags -->
      {tags.length > 0 && (
        <div class="flex flex-wrap gap-2">
          {tags.map(tag => (
            <a
              href={`/tags/${tag}`}
              class="px-3 py-1.5 bg-gray-100 text-gray-700 text-sm font-medium rounded-full hover:bg-gray-200 transition-colors"
            >
              #{tag}
            </a>
          ))}
        </div>
      )}
    </header>

    <!-- Two-column layout: Content + TOC (only on XL screens) -->
    <div class="grid grid-cols-1 xl:grid-cols-[1fr_240px] gap-16">
      <!-- Main Content with prose styling -->
      <div class="min-w-0">
        <!-- Prose container for optimal reading -->
        <div class="prose prose-lg prose-gray max-w-none">
          <slot />
        </div>

        <!-- Comments Section -->
        <div class="mt-16 pt-12 border-t border-gray-200">
          <GiscusComments />
        </div>
      </div>

      <!-- Table of Contents Sidebar (XL screens only) -->
      {toc.length > 0 && (
        <aside class="hidden xl:block">
          <div class="sticky top-8">
            <TableOfContents items={toc} />
          </div>
        </aside>
      )}
    </div>

    <!-- Back to overview link -->
    <div class="mt-12 pt-8 border-t border-gray-200">
      <a
        href={Astro.url.pathname.includes('/research') ? '/research' : '/projects'}
        class="inline-flex items-center gap-2 text-gray-600 hover:text-gray-900 font-medium transition-colors group"
      >
        <svg class="w-4 h-4 group-hover:-translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
        </svg>
        Back to {Astro.url.pathname.includes('/research') ? 'Research' : 'Projects'}
      </a>
    </div>
  </article>
</SidebarLayout>
